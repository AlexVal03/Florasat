# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== NASA EARTHDATA CREDENTIALS =====
# Create free account at: https://urs.earthdata.nasa.gov
# Required for real MODIS/HLS satellite data access
NASA_EARTHDATA_USERNAME=your_username_here
NASA_EARTHDATA_PASSWORD=your_password_here
NASA_CMR_TOKEN=optional_token_here

# ===== WEATHER SERVICE API KEYS =====
# Optional - for enhanced meteorological analysis
AEMET_API_KEY=your_aemet_key_here
METEOMATICS_USERNAME=your_meteomatics_username
METEOMATICS_PASSWORD=your_meteomatics_password

# ===== APPLICATION CONFIGURATION =====
DEBUG=True
LOG_LEVEL=INFO
API_VERSION=v1
PORT=8000
HOST=0.0.0.0

# ===== SECURITY SETTINGS =====
SECRET_KEY=bloomwatch_nasa_space_apps_2025
CORS_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]

# ===== NASA API CONFIGURATION =====
NASA_API_BASE_URL=https://appeears.earthdatacloud.nasa.gov/api
NASA_REQUEST_TIMEOUT=300
NASA_MAX_RETRIES=3

# ===== PHENOLOGY ANALYSIS SETTINGS =====
DEFAULT_REGION=valencia
DEFAULT_SPECIES=arroz
DEFAULT_ANALYSIS_YEARS=5
SMOOTHING_WINDOW_SIZE=5
PEAK_DETECTION_PROMINENCE=0.1
MIN_BLOOM_AMPLITUDE=0.2

# ===== TRANSLATION SERVICE =====
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=["es", "en"]

# ===== CACHE & PERFORMANCE =====
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=10

# ===== LOGGING CONFIGURATION =====
LOG_FILE=bloomwatch.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
